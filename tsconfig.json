{
    "compilerOptions": {
        // Shared compiler options for all TypeScript projects
        "strict": true,
        "target": "ES2024",
        "lib": ["ES2024"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": ["node_modules", "dist", "build", "coverage", "test-results", "playwright-report"]
}
